<p><%= t('devise.mailer.confirmation_instructions.greeting', name: @resource.name) %></p>

<% account_user = @resource&.account_users&.first %>

<% if account_user&.inviter.present? && @resource.unconfirmed_email.blank? %>
  <p><%= t('devise.mailer.confirmation_instructions.invite_info', inviter_name: account_user.inviter.name, account_name: account_user.account.name, brand_name: global_config['BRAND_NAME'] || 'Chatwoot') %></p>
<% end %>

<% if @resource.confirmed? %>
  <p><%= t('devise.mailer.confirmation_instructions.login_instruction', brand_name: global_config['BRAND_NAME'] || 'Chatwoot') %></p>
<% else %>
  <% if account_user&.inviter.blank? %>
  <p>
    <%= t('devise.mailer.confirmation_instructions.welcome', brand_name: global_config['BRAND_NAME'] || 'Chatwoot') %>
  </p>
  <% end %>
  <p><%= t('devise.mailer.confirmation_instructions.activate_instruction') %></p>
<% end %>

<% if @resource.unconfirmed_email.present? %>
  <p><%= link_to t('devise.mailer.confirmation_instructions.confirm_my_account'), frontend_url('auth/confirmation', confirmation_token: @token) %></p>
<% elsif @resource.confirmed? %>
  <p><%= link_to t('devise.mailer.confirmation_instructions.login_to_account'), frontend_url('auth/sign_in') %></p>
<% elsif account_user&.inviter.present? %>
  <p><%= link_to t('devise.mailer.confirmation_instructions.confirm_my_account'), frontend_url('auth/password/edit', reset_password_token: @resource.send(:set_reset_password_token)) %></p>
<% else %>
  <p><%= link_to t('devise.mailer.confirmation_instructions.confirm_my_account'), frontend_url('auth/confirmation', confirmation_token: @token) %></p>
<% end %>
